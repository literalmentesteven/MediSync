<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MediSync"
             x:Class="MediSync.App">
    
    <Application.Resources>
    <ResourceDictionary>
        <Color x:Key="Primary">#00ADB5</Color> <Color x:Key="Secondary">#39424E</Color> <Color x:Key="DarkBackground">#222831</Color> <Color x:Key="Accent">#FF5722</Color> <Style TargetType="Frame" x:Key="EntryFrameStyle">
            <Setter Property="BackgroundColor" Value="#30ffffff" /> <Setter Property="BorderColor" Value="Transparent" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="Padding" Value="0" /> </Style>

        <Style TargetType="Entry" x:Key="EntryTextStyle">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="10,0" /> </Style>

        </ResourceDictionary>
</Application.Resources>
</Application>
